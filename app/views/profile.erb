<form name='input' action='/' class="conditions" method='post'>
  <p class="lead">Pressure Preference</p>
    <select class="pressure">
      <option>Light</option>
      <option>Firm</option>
      <option>Deep Tissue</option>
    </select>
  <button type="submit" class="btn btn-success"> Update Preference </button>
</form>

<form>
  <p class="lead">Conditions/Additional Information</p>
  <textarea class="conditions_desc" id="textarea" rows="6" placeholder="Let us know some pains you may have or injuries you may want addressed."></textarea>
  <button type="submit" class="btn btn-success"> Submit </button>
</form>  

