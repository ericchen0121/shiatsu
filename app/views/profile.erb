
  <h2><%=fullname%></h2>
    <a href="#" class="btn btn-inverse btn-small"><i class="icon-white icon-pencil"></i></a>
  <h3><%=current_user.email%> </h3>
  <h5>Total Massages you have booked <%=current_user.appt_count%> </h5>
  <h5>Available Massage Appointments <%= current_user.appt_count_max - current_user.appt_count %></h5>
  
  
  <form name='input' action='profile/update' class="preference" method='put'>
    <p class="lead">Pressure Preference</p>
      <select class="pressure">
        <option>Light</option>
        <option>Firm</option>
        <option>Deep Tissue</option>
      </select>
    <a class="btn btn-success update_preferences" data-preference= $('.option').val()>Update</a>
  </form>
  
  <form>
    <p class="lead">Conditions/Additional Information</p>
    <textarea class="conditions_desc" id="textarea" rows="6" placeholder="Let us know some pains you   may have or injuries you may want addressed."></textarea>
    <button type="submit" class="btn btn-success "> Submit </button>
  </form>  
  
  
